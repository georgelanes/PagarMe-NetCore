<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Product>PagarMe .NET Core Standard Library</Product>
    <Description>PagarMe .NET Core Standard Library</Description>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Version>3.0.0</Version>
    <AssemblyVersion>3.0.0.0</AssemblyVersion>
    <PackageLicenseUrl>https://github.com/pagarme/pagarme-net/blob/master/LICENSE</PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/pagarme/</PackageProjectUrl>
    <RepositoryUrl>https://github.com/pagarme/pagarme-net</RepositoryUrl>
    <RepositoryType>Git</RepositoryType>
    <PackageTags>PagarMe</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="BouncyCastle.NetCore" Version="1.8.2" />
    <PackageReference Include="Newtonsoft.Json" Version="11.0.2" />
  </ItemGroup>

</Project>
